@page
@model WebApplication.Pages.Producto.GridModel
@{
}
<div class="container">
    <div class="card">
        <div class="card-header">
           Productos
        </div>
        <div class="card-body">

            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Descipcion</th>                             
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.ProductoId</td>
                                <td>@item.Descripcion</td>                               
                                <td>@(item.Estado?"Activo":"Inactivo")</td>
                                <td>
                                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.ProductoId">
                                        <i class='bx bx-edit-alt'></i>
                                    </a>
                                    <button type="button" class="btn btn-primary"
                                            onclick="ProductoGrid.OnClickEliminar(@item.ProductoId)">
                                        <i class='bx bx-trash'></i>
                                    </button>
                                </td>
                            </tr>
}

                        </tbody>
                    </table>


                </div>
            </div>


        </div>
    </div>

</div>

@section Scripts{


    <script defer src="~/App/Producto/Grid.js"></script>



}
