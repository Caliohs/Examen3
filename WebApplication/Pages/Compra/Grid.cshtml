@page
@model WebApp.Pages.Compra.GridModel
@{
}
<br />
<div class="container-fluid">
    <div class="card">
        <div class="card-header">

            Compra


        </div>
        <div class="card-body">

            <a class="btn btn-outline-primary" asp-page="Edit">
                <i class='bx bxs-comment-add'></i>
            </a>

            <div class="row">

                <div class="col-12"></div>
                <table id="GridView" class="table table-bordered table-striped table-over">
                    <thead>
                        <tr>
                            <th>Fecha Compra</th>                          
                            <th>Nombre Cliente</th>
                            <th>Producto</th>
                            <th>Monto</th>
                            <th>Impuesto</th>
                            <th>Sub Total</th>
                            <th>Total</th>
                            <th>Observaciones</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.GridList)
                        {
                            <tr>
                             
                                <td>@item.FechaCompra.ToString("dd/MM/yyyy")</td>
                                <td>@item.Cliente.NombreCompleto</td>
                                <td>@item.Producto.Descripcion</td>
                                <td>@item.Monto</td>
                                <td>@item.Impuesto</td>
                                <td>@((item.Impuesto/100)* item.Monto)</td>
                                <td>@item.Total</td>
                                <td>@item.Observaciones</td>
                                <td>@(item.Estado ?"Activo" :"Inactivo")</td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@item.IdCompra">
                                        <i class='bx bx-edit-alt'></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-danger"
                                            onclick="CompraGrid.OnClickEliminar(@item.IdCompra)">
                                        <i class='bx bx-trash'></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>


        </div>
    </div>
</div>


@section Scripts{

    <script defer src="~/App/Compra/Grid.js"></script>

}